{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "target": "es2019",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "pretty": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": ".",
    "outDir": "./lib",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "*/<node_internals>/**/*"]
}
